rules_version = '2';

// Firebase Storage Security Rules for Hackathon App
service firebase.storage {
  match /b/{bucket}/o {

    // マッチ画像アップロード用のルール
    // matches/{matchId}/round{roundNumber}_player{playerNumber}.jpg
    match /matches/{matchId}/{imageFile} {
      // 認証済みユーザーのみアップロード可能
      allow write: if request.auth != null
                   && request.resource.size < 5 * 1024 * 1024  // 5MB制限
                   && request.resource.contentType.matches('image/jpeg');  // JPEG形式のみ

      // 認証済みユーザーは全マッチ画像を読み取り可能
      allow read: if request.auth != null;
    }

    // その他のパスはデフォルトで拒否
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
